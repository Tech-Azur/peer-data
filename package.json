{
  "name": "peer-data",
  "version": "3.1.6",
  "description": "PeerData - library for files, media streaming/sharing using WebRTC",
  "scripts": {
    "build": "rollup -c",
    "clean": "rimraf dist coverage",
    "typecheck": "tsc --noEmit",
    "lint": "tslint --project tsconfig.json --project --format stylish",
    "test": "jest --no-cache",
    "test:cov": "yarn test -- --coverage",
    "test:watch": "yarn test -- --watchAll",
    "prepare": "yarn build",
    "prebuild": "yarn clean",
    "postbuild": "rimraf dist/**/__tests__",
    "posttest": "yarn typecheck && yarn lint",
    "preversion": "yarn test",
    "postversion": "git push && git push --tags",
    "check": "npm-check -u"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vardius/peer-data.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "PeerData",
    "WebRTC",
    "cdn",
    "web",
    "rtc",
    "video",
    "player",
    "html5",
    "peer",
    "socket",
    "real",
    "time",
    "communication"
  ],
  "author": {
    "name": "Rafa≈Ç Lorenz",
    "email": "vardius@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vardius/peer-data/issues"
  },
  "homepage": "https://github.com/vardius/peer-data#readme",
  "jest": {
    "transform": {
      ".(ts?)": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)(spec|test).{t,j}s"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(node_modules|lib|es|dist)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{t,j}s",
      "!src/**/*.d.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ]
  },
  "dependencies": {
    "socket.io-client": "^2.0.3",
    "webrtc-adapter": "^7.2.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/socket.io-client": "^1.4.29",
    "@types/webrtc": "0.0.25",
    "codecov": "^3.5.0",
    "cross-env": "^5.0.1",
    "dts-bundle": "^0.7.3",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "jest-environment-node-debug": "^2.0.0",
    "npm-check": "^5.7.1",
    "rimraf": "^2.6.1",
    "rollup": "^1.12.3",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.21.1",
    "ts-jest": "^24.0.2",
    "tslib": "^1.7.1",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
